    </div>
    <div class="col-md-4">
        <table class="table">
            <tr>Incoming Ingredients</tr>
            @foreach (var item in ProductsController.IncomingIngredients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modeitem=>item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-ingrId="-@item.Id">Remove</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4">
        <table class="table">
            <tr>Non-Incoming Ingredients</tr>
            @foreach (var item in ProductsController.NonIncomingIngredients)
