@using WebASP_MVC.Controllers
@model UseCases.API.Dto.ProductDto
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        @if (Model != null && Model.ProductsIngredients.Count > 0 && ProductsController.IncomingIngredients != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductsIngredients)
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>Incoming Ingredients</tr>
                    @foreach (var item in ProductsController.IncomingIngredients)
                    {
                        if (item == null) continue;
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }
    </dl>
</div>
<div>
    @if (Model != null)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
